<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.example.android.tourguideapp.MainActivity">

    <ImageView
        android:id="@+id/main_background_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        android:src="@drawable/activity_main_bg_02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/minMargin"
            android:text="@string/city_name"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mainTitleTextSize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minMargin"
            android:text="@string/app_name"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/mainSubtitleTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/main_info_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/backgroundColor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitStart"
                android:src="@drawable/category_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/category_1"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/mainCategoryTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_culture_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/backgroundColor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitStart"
                android:src="@drawable/category_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/category_2"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/mainCategoryTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_food_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/backgroundColor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitStart"
                android:src="@drawable/category_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/category_3"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/mainCategoryTextSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_leisure_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/backgroundColor"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitStart"
                android:src="@drawable/category_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/category_4"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/mainCategoryTextSize" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
