<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout"
    android:orientation="vertical"
    tools:context="com.example.android.tourguideapp.MainActivity">

    <ImageView
        android:id="@+id/main_background_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:contentDescription="@string/content_description_main_image"
        android:scaleType="centerCrop"
        android:src="@drawable/activity_main_bg_02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/MainTitle"
            android:text="@string/city_name" />

        <TextView
            style="@style/MainSubtitle"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tinyMargin"
            android:layout_weight="1"
            android:background="@color/secondaryBackgroundColor">

            <LinearLayout
                android:id="@+id/main_category_1"
                style="@style/MainCategoryLayout">

                <ImageView
                    style="@style/MainCategoryImage"
                    android:layout_width="match_parent"
                    android:contentDescription="@string/content_description_category_1"
                    android:src="@drawable/category_1" />

                <TextView
                    style="@style/MainCategoryTitle"
                    android:text="@string/category_1" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tinyMargin"
            android:layout_weight="1"
            android:background="@color/secondaryBackgroundColor">

            <LinearLayout
                android:id="@+id/main_category_2"
                style="@style/MainCategoryLayout">

                <ImageView
                    style="@style/MainCategoryImage"
                    android:contentDescription="@string/content_description_category_2"
                    android:src="@drawable/category_2" />

                <TextView
                    style="@style/MainCategoryTitle"
                    android:text="@string/category_2" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tinyMargin"
            android:layout_weight="1"
            android:background="@color/secondaryBackgroundColor">

            <LinearLayout
                android:id="@+id/main_category_3"
                style="@style/MainCategoryLayout">

                <ImageView
                    style="@style/MainCategoryImage"
                    android:contentDescription="@string/content_description_category_3"
                    android:src="@drawable/category_3" />

                <TextView
                    style="@style/MainCategoryTitle"
                    android:text="@string/category_3" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tinyMargin"
            android:layout_weight="1"
            android:background="@color/secondaryBackgroundColor">

            <LinearLayout
                android:id="@+id/main_category_4"
                style="@style/MainCategoryLayout">

                <ImageView
                    style="@style/MainCategoryImage"
                    android:contentDescription="@string/content_description_category_4"
                    android:src="@drawable/category_4" />

                <TextView
                    style="@style/MainCategoryTitle"
                    android:text="@string/category_4" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
