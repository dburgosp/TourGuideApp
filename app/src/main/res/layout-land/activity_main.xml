<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.example.android.tourguideapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/minMargin">

        <TextView
            style="@style/main_title_textview"
            android:text="@string/city_name" />

        <TextView
            style="@style/main_subtitle_textview"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_background_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/main_categories_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/main_info_category"
                    style="@style/main_category_linearlayout">

                    <ImageView
                        style="@style/main_category_imageview"
                        android:src="@drawable/category_1" />

                    <TextView
                        style="@style/main_category_textview"
                        android:text="@string/category_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_culture_category"
                    style="@style/main_category_linearlayout">

                    <ImageView
                        style="@style/main_category_imageview"
                        android:src="@drawable/category_2" />

                    <TextView
                        style="@style/main_category_textview"
                        android:text="@string/category_2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/main_categories_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/main_food_category"
                    style="@style/main_category_linearlayout">

                    <ImageView
                        style="@style/main_category_imageview"
                        android:src="@drawable/category_3" />

                    <TextView
                        style="@style/main_category_textview"
                        android:text="@string/category_3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_leisure_category"
                    style="@style/main_category_linearlayout">

                    <ImageView
                        style="@style/main_category_imageview"
                        android:src="@drawable/category_4" />

                    <TextView
                        style="@style/main_category_textview"
                        android:text="@string/category_4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
